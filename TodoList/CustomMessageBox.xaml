<Window x:Name="custom_messagebox" x:Class="TodoList.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="MessageBox" Height="240" Width="400">
    <Grid Background="#FFD86834" Margin="0,0,0,0">
        <Label x:Name="lb_messagebox_info" Content="Label" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,16,0,0" Width="360" Foreground="White" FontSize="18" Height="100" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="bt_messagebox_no" Content="Nie" HorizontalAlignment="Right" Margin="0,150,30,0" Background="White" BorderBrush="Black" FontSize="16" Width="100" Click="bt_messagebox_no_Click" Height="30" VerticalAlignment="Top"/>
        <Button x:Name="bt_messagebox_yes" Content="Tak" HorizontalAlignment="Center" Margin="0,150,0,0" Background="White" BorderBrush="Black" FontSize="16" Width="100" Click="bt_messagebox_yes_Click" Height="30" VerticalAlignment="Top"/>
    </Grid>
</Window>
