<Window x:Class="TodoList.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="AddEventWindow" Height="400" Width="600">
    <Grid>
        <Label x:Name="lb_addEvent_info" Content="Tworzenie nowego wydarzenia" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lb_addEvent_date" Content="Wybierz datę wydarzenia:" HorizontalAlignment="Left" Margin="21,42,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dp_addEvent_selected_date" HorizontalAlignment="Left" Margin="176,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_addEvent_title" HorizontalAlignment="Left" Margin="27,99,0,0" TextWrapping="Wrap" Text="Tytuł" VerticalAlignment="Top" Width="497"/>
        <TextBox x:Name="tb_addEvent_description" HorizontalAlignment="Left" Margin="27,141,0,0" TextWrapping="Wrap" Text="Opis" VerticalAlignment="Top" Width="497" Height="99"/>
        <Button x:Name="bt_addEvent_add" Content="Dodaj wydarzenie" HorizontalAlignment="Left" Margin="27,266,0,0" VerticalAlignment="Top" Click="bt_addEvent_add_Click"/>

    </Grid>
</Window>
